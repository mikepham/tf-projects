[
  {
    "name": "nzbhydra",
    "image": "nativecode/nzbhydra:latest",
    "cpu": 512,
    "memory": 1024,
    "essential": true,
    "environment": [
      {
        "name": "PUID",
        "value": "1000"
      },
      {
        "name": "PGID",
        "value": "1000"
      },
      {
        "name": "TZ",
        "value": "America/New_York"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "nzbhydra",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "prod"
      }
    },
    "portMappings": [
      {
        "containerPort": 5076,
        "hostPort": 5076
      }
    ],
    "secrets": [
      {
        "name": "${secret_name}",
        "valueFrom": "${secret_arn}"
      }
    ]
  }
]
